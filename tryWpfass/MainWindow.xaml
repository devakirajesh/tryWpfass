        <TextBox x:Name="savasTB" HorizontalAlignment="Left" Margin="88,285,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" Height="26"/>
        <Label x:Name="saveLabel" Content="Save as:" HorizontalAlignment="Left" Margin="10,285,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.277,-0.464" Width="67"/>
